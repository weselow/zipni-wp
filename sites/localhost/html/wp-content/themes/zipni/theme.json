{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "accent",
					"color": "#d63031",
					"name": "Accent"
				},
				{
					"slug": "accent-hover",
					"color": "#b71c1c",
					"name": "Accent Hover"
				},
				{
					"slug": "accent-light",
					"color": "#fde8e8",
					"name": "Accent Light"
				},
				{
					"slug": "surface",
					"color": "#ffffff",
					"name": "Surface"
				},
				{
					"slug": "surface-alt",
					"color": "#faf5f5",
					"name": "Surface Alt"
				},
				{
					"slug": "text-primary",
					"color": "#1a1a1a",
					"name": "Text"
				},
				{
					"slug": "text-secondary",
					"color": "#666666",
					"name": "Text Secondary"
				},
				{
					"slug": "border",
					"color": "#eaeaea",
					"name": "Border"
				}
			],
			"gradients": [],
			"defaultPalette": false,
			"defaultGradients": false
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "'Inter', system-ui, -apple-system, sans-serif",
					"name": "Inter",
					"slug": "inter",
					"fontFace": [
						{
							"fontFamily": "Inter",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontDisplay": "swap",
							"src": ["https://fonts.gstatic.com/s/inter/v18/UcCO3FwrK3iLTeHuS_nVMrMxCp50SjIw2boKoduKmMEVuLyfAZ9hiA.woff2"]
						},
						{
							"fontFamily": "Inter",
							"fontWeight": "500",
							"fontStyle": "normal",
							"fontDisplay": "swap",
							"src": ["https://fonts.gstatic.com/s/inter/v18/UcCO3FwrK3iLTeHuS_nVMrMxCp50SjIw2boKoduKmMEVuI6fAZ9hiA.woff2"]
						},
						{
							"fontFamily": "Inter",
							"fontWeight": "600",
							"fontStyle": "normal",
							"fontDisplay": "swap",
							"src": ["https://fonts.gstatic.com/s/inter/v18/UcCO3FwrK3iLTeHuS_nVMrMxCp50SjIw2boKoduKmMEVuGKYAZ9hiA.woff2"]
						},
						{
							"fontFamily": "Inter",
							"fontWeight": "700",
							"fontStyle": "normal",
							"fontDisplay": "swap",
							"src": ["https://fonts.gstatic.com/s/inter/v18/UcCO3FwrK3iLTeHuS_nVMrMxCp50SjIw2boKoduKmMEVuFuYAZ9hiA.woff2"]
						}
					]
				}
			],
			"fontSizes": [
				{ "slug": "xs", "size": "0.75rem", "name": "Extra Small" },
				{ "slug": "sm", "size": "0.875rem", "name": "Small" },
				{ "slug": "md", "size": "1rem", "name": "Medium" },
				{ "slug": "lg", "size": "1.125rem", "name": "Large" },
				{ "slug": "xl", "size": "1.25rem", "name": "Extra Large" },
				{ "slug": "2xl", "size": "1.5rem", "name": "2XL" },
				{ "slug": "3xl", "size": "1.875rem", "name": "3XL" },
				{ "slug": "4xl", "size": "2.25rem", "name": "4XL" }
			]
		},
		"spacing": {
			"units": ["px", "em", "rem", "%", "vw"],
			"spacingSizes": [
				{ "slug": "10", "size": "0.25rem", "name": "1" },
				{ "slug": "20", "size": "0.5rem", "name": "2" },
				{ "slug": "30", "size": "1rem", "name": "3" },
				{ "slug": "40", "size": "1.5rem", "name": "4" },
				{ "slug": "50", "size": "2rem", "name": "5" },
				{ "slug": "60", "size": "3rem", "name": "6" },
				{ "slug": "70", "size": "4rem", "name": "7" },
				{ "slug": "80", "size": "5rem", "name": "8" }
			]
		},
		"layout": {
			"contentSize": "720px",
			"wideSize": "1152px"
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--surface)",
			"text": "var(--wp--preset--color--text-primary)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--inter)",
			"fontSize": "var(--wp--preset--font-size--md)",
			"lineHeight": "1.6"
		},
		"spacing": {
			"padding": {
				"left": "var(--wp--preset--spacing--30)",
				"right": "var(--wp--preset--spacing--30)"
			}
		},
		"elements": {
			"heading": {
				"color": {
					"text": "var(--wp--preset--color--text-primary)"
				},
				"typography": {
					"fontWeight": "700",
					"lineHeight": "1.2"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "clamp(2rem, 5vw, 3rem)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "clamp(1.5rem, 3.5vw, 2.25rem)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--30)"
					}
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--lg)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--accent)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--accent-hover)"
					}
				},
				"typography": {
					"textDecoration": "none"
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--accent)",
					"text": "var(--wp--preset--color--surface)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--sm)",
					"fontWeight": "600"
				},
				"border": {
					"radius": "0.5rem"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--accent-hover)"
					}
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--sm)",
					"fontWeight": "500"
				},
				"color": {
					"text": "var(--wp--preset--color--text-secondary)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--2xl)",
					"fontWeight": "700"
				},
				"color": {
					"text": "var(--wp--preset--color--accent)"
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"customTemplates": [
		{
			"name": "page-blank",
			"title": "Blank (без шапки/подвала)",
			"postTypes": ["page"]
		},
		{
			"name": "page-landing",
			"title": "Landing Page",
			"postTypes": ["page"]
		}
	]
}
